<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_3sdp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/ivImage_trending"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:src="@drawable/image_icon_load"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/right_top_bottom_border"
        android:paddingLeft="@dimen/_4sdp">
        <TextView
            android:id="@+id/tvTitle_trending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:textColor="#000"
            android:maxLines="2"
            android:layout_marginRight="@dimen/_4sdp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:src="@drawable/ic_eye_black"
                android:layout_gravity="center"
                android:padding="@dimen/_2sdp"/>
            <TextView
                android:id="@+id/tvViewCount_trending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="88"
                android:paddingLeft="@dimen/_2sdp"
                android:textSize="@dimen/_10sdp"
                android:layout_gravity="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvDesc_trending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"

            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_4sdp"/>
    </LinearLayout>
</LinearLayout>