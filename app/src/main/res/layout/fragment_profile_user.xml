<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FragmentProfileUser"
    android:orientation="vertical"
    android:background="@color/transparent0">

    <!-- TODO: Update blank fragment layout -->

    <androidx.cardview.widget.CardView
        android:id="@+id/cvProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_134sdp"
            android:orientation="horizontal"
            android:background="#a29bfe">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ivThumbUser"
                android:layout_width="@dimen/_64sdp"
                android:layout_height="@dimen/_64sdp"
                android:src="@drawable/ic_user"
                android:layout_margin="@dimen/_16sdp"
                />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_16sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xin chào, "
                    android:textSize="@dimen/_12sdp"
                    android:textColor="#000"/>
                <TextView
                    android:id="@+id/tvName_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đọc giả"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="#000"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="end">
                <com.google.android.gms.common.SignInButton
                    android:id="@+id/btnLoginGG"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:padding="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_10sdp"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:translationZ="10dp"
        android:paddingTop="@dimen/_95sdp"
        android:paddingLeft="@dimen/_16sdp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_37sdp">

            <LinearLayout
                android:layout_width="@dimen/_92sdp"
                android:layout_height="@dimen/_80sdp"
                android:gravity="center"
                android:background="@drawable/item_user"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/btnBookMark_profile"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/ic_list_bookmark"
                    android:padding="@dimen/_14sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="DS Luu"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="@dimen/_32sdp">

            <LinearLayout
                android:layout_width="@dimen/_92sdp"
                android:layout_height="@dimen/_80sdp"
                android:gravity="center"
                android:background="@drawable/item_user"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/btnWeather"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/weather"
                    android:padding="@dimen/_14sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Thời tiết hôm nay"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


<!-- L L2 -->
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ll1"
        android:paddingTop="@dimen/_16sdp"
        android:paddingLeft="@dimen/_21sdp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_32sdp">

            <LinearLayout
                android:layout_width="@dimen/_92sdp"
                android:layout_height="@dimen/_80sdp"
                android:gravity="center"
                android:background="@drawable/item_user"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/btnInfoApp"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/ic_info_app"
                    android:padding="@dimen/_14sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Thông tin ứng dụng"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="@dimen/_32sdp">
            <LinearLayout
                android:id="@+id/itemLogout"
                android:layout_width="@dimen/_92sdp"
                android:layout_height="@dimen/_80sdp"
                android:gravity="center"
                android:background="@drawable/item_user"
                android:orientation="vertical"
                android:visibility="gone">
                <ImageButton
                    android:id="@+id/btnLogoutGG"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/ic_logout"
                    android:padding="@dimen/_14sdp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_below="@id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linear_rounded_border"
        android:layout_margin="@dimen/_4sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/blu4"/>
            <Button
                android:id="@+id/btnSetting_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:background="@color/whi0"
                android:text="Cai Dat"/>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll2"
        android:orientation="vertical">
        <TextView
            android:layout_margin="@dimen/_6sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tin tức đã xem"
            android:textColor="#000"
            android:textSize="@dimen/_12sdp"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/blu4"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_6sdp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSeen_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_6sdp"/>
    </LinearLayout>
</RelativeLayout>